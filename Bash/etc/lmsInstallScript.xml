	</subversion>
	
	<!-- 
	=====================================================================
	=====================================================================

		allowed command-line input (cli) installation options

	=====================================================================
	===================================================================== 
	-->
	<installOptions type="associative" name="installOptions">
		<installVar type="element" parent="installOptions" name="lang">bash</installVar>
		<installVar type="element" parent="installOptions" name="type">local</installVar>
