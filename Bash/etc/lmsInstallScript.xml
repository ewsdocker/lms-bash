	<!-- 
	=====================================================================
	=====================================================================

		allowed command-line input (cli) subversion options

	=====================================================================
	===================================================================== 
	-->
	<subversion type="associative" name="subversion">
		<subversionVar type="element" parent="subversion" name="host">localhost</subversionVar>
		<subversionVar type="element" parent="subversion" name="path">svn</subversionVar>
