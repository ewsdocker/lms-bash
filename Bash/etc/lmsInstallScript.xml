		<cliParameterMap type="element" parent="cliParametersMap" name="quiet">silentOutput</cliParameterMap>
		<cliParameterMap type="element" parent="cliParametersMap" name="repoName">repo</cliParameterMap>
		<cliParameterMap type="element" parent="cliParametersMap" name="rootdir">root</cliParameterMap>
		<cliParameterMap type="element" parent="cliParametersMap" name="src">srcDir</cliParameterMap>
		<cliParameterMap type="element" parent="cliParametersMap" name="type">type</cliParameterMap>
